<!DOCTYPE html>
<html lang="en" ng-app="youtube2mp3">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/modules/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" href="/modules/font-awesome/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

  <link rel="stylesheet" href="/css/style.css">
</head>

<body ng-controller="HomeCtrl">


  <!-- Navigation -->
  <nav class="navbar navbar-light bg-light static-top">
    <div class="container">
      <a class="navbar-brand" href="/">Youtube2MP3</a>
      <a class="btn btn-primary btn-link" href="https://github.com/johnmakridis/nodejs-youtube2mp3" target="_blank">
        <i class="fa fa-github"></i> View on Github
      </a>
    </div>
  </nav>

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-1">Youtube video to MP3 converter!</h1>
          <h4 class="mb-5">Insert video URL below and click convert to get the mp3 file.</h4>
        </div>
        <div class="col-md-10 col-lg-10 col-xl-10 mx-auto">
          <form ng-submit="converter.videoConvert();">

            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="text" class="form-control form-control-lg" ng-model="converter.videoURL" ng-disabled="convertFinished" placeholder="Youtube URL, e.g. https://www.youtube.com/watch?v=1GX_4PgUhYo"
                  autofocus>
              </div>
              <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-primary" ng-disabled="convertFinished">Convert!</button>
              </div>
            </div>

            <div class="form-row mt-4 text-center">
              <div class="col-12">
                <div class="loader" id="loader" data-loading></div>
              </div>
            </div>

            <div class="form-row mt-5 text-center ng-cloak">
              <div class="col-12 col-md-12 mb-md-0">

                <h5 class="mb-3" ng-show="convertFinished && downloadURL">Conversion Finished!</h5>
                <a class="btn btn-primary" ng-href="/" ng-show="convertFinished && downloadURL">
                  <i class="fa fa-refresh"></i>&nbsp;&nbsp;Convert new video
                </a>
                <a class="btn btn-success" target="_blank" href="{{'file:///' + downloadURL}}" ng-show="convertFinished && downloadURL">
                  <i class="fa fa-download"></i>&nbsp;&nbsp;Download MP3
                </a>


                <h5 class="text-danger" ng-show="convertFinished && videoNotFound">Video not found..</h5>
                <a class="btn btn-primary" ng-href="/" ng-show="convertFinished && videoNotFound">
                  <i class="fa fa-refresh"></i>&nbsp;&nbsp;Convert new video
                </a>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </header>

  <!-- Icons Grid -->
  <section ng-show="false" class="features-icons bg-light text-center ng-cloak">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-screen-desktop m-auto text-primary"></i>
            </div>
            <h3>Fully Responsive</h3>
            <p class="lead mb-0">This theme will look great on any device, no matter the size!</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>
            <h3>Bootstrap 4 Ready</h3>
            <p class="lead mb-0">Featuring the latest build of the new Bootstrap 4 framework!</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-check m-auto text-primary"></i>
            </div>
            <h3>Easy to Use</h3>
            <p class="lead mb-0">Ready to use with your own content, or customize the source files!</p>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Call to Action -->
  <section ng-show="false" class="call-to-action text-white text-center ng-cloak">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-4">Ready to get started? Sign up now!</h2>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form>
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
              </div>
              <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-primary">Sign up!</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
          <ul class="list-inline mb-2">
            <li class="list-inline-item">
              <a href="https://github.com/johnmakridis/nodejs-youtube2mp3" target="_blank">
                <i class="fa fa-github"></i> View on Github</a>
            </li>
          </ul>
          <p class="text-muted mb-4 mb-lg-0">MIT License</p>
        </div>
        <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
          <ul class="list-inline mb-0">
            <li class="list-inline-item mr-3">
              <a href="https://johnmakridis.github.io/" target="_blank" title="About the Author">
                <i class="fa fa-user fa-2x fa-fw"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <script src="/modules/jquery/dist/jquery.min.js"></script>
  <script src="/modules/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/modules/angular/angular.min.js"></script>
  <script src="/app/app.js"></script>
</body>

</html>